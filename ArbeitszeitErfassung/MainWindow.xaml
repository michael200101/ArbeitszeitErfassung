<Window x:Class="ArbeitszeitErfassung.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArbeitszeitErfassung"
        mc:Ignorable="d"
        Title="Arbeitszeiterfassung" Height="650" Width="800">
    <StackPanel>


        <Button  Margin="20" x:Name="Button1" Content="Zeiterfassung Starten" Click="Button_Click" Height="50" FontSize="25" Width="280"/>
        
        <Button  Margin="20" x:Name="Button3" Content="Pause Starten" Click="Button_Click2" Height="50" FontSize="25" Width="280"/>
        <TextBlock x:Name="Text1" HorizontalAlignment="Left" Width="300" Margin="12" FontSize="18" ></TextBlock>
        <TextBlock x:Name="Text2" HorizontalAlignment="Left" Width="350" Margin="12" FontSize="18" ></TextBlock>
        <TextBlock x:Name="Text3" HorizontalAlignment="Left" Width="300" Margin="12" FontSize="18" ></TextBlock>
        <TextBlock x:Name="Text4" HorizontalAlignment="Left" Width="300" Margin="12" FontSize="18" ></TextBlock>
        <TextBlock x:Name="Text5" HorizontalAlignment="Left" Width="300" Margin="12" FontSize="18" ></TextBlock>
        <Button Margin="10" Click="Save" Width="120" Height="30" FontSize="16">Datei speichern</Button>
        <TextBox x:Name="BenutzereingabeBox" Width="200" Height="25" Margin="0,0,0,10" />
        <Button Content="Pfad speichern" Width="100" Click="Bestätigen_Click" />

    </StackPanel>
</Window>
